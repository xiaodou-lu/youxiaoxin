// out: ../css/setting.css
@import 'common';

html,
body {
	background-color: #eff3f4;
}

.list {
	width: 100%;
	height: 44px;
	background-color: #fff;
	box-sizing: border-box;
	.label {
		float: left;
		width: 40%;
		height: 20px;
		text-align: left;
		line-height: 20px;
		margin: 12px 10px;
	}

	.toggle-button {
		float: right;
		margin: 12px 10px;
		width: 40px;
		height: 20px;
	}

	.toright {
		float: right;
		width: 40%;
		height: 20px;
		text-align: right;
		line-height: 20px;
		margin: 12px 10px;
		color: #555;
	}
}

footer {
	margin: 50px 20px;

	button {
		width: 100%;
		height: 40px;
		line-height: 40px;
		border-radius: 6px;
		background-color: @main-color;
		color: #fff;
	}
}