@import 'common';
.giftList {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  padding: 10px;
  margin-bottom: 20px;
  box-sizing: border-box;
  .gift-item {
    width: 18%;
    height: 76px;
    position: relative;
    text-align: center;
    color: #555;
    padding: 4px 0;
    box-sizing: border-box;
    border-radius: 4px;
    margin: 0 1% 10px;
    .gift-item-vip {
      width: 100%;
      position: absolute;
      left: 0;
      top: 0;
      img {
        width: 24px;
        display: block;
      }
    }
    .gift-item-img {
      width: 30px;
      height: 30px;
      display: block;
      margin: 2px auto;
    }
    p {
      font-size: 14px;
      margin-bottom: 3px;
    }
    span {
      font-size: 12px;
      display: block;
    }
  }
}

