// out: ../css/edit.css
@import 'common';

img {
	display: block;
}

html,
body {
	background-color: #eff3f4;
}

.flex-con {
	overflow-y: auto;
}

.imglist {
	padding: 2px;
	background: #f0f4f3;
	box-sizing: border-box;
	.imgleft {
		float: left;
		width:66.6%;
		height: 240px;
		box-sizing: border-box;
		border: 2px solid #f0f4f3;
		img {
			width: 100%;
			box-sizing: border-box;
		}
	}
	.imgright {
		float: right;
		width: 33.333333%;
		height: 240px;
		.imgright-1{
		width: 100%;
		height: 120px;
		box-sizing: border-box;
		border: 2px solid #f0f4f3;
		}
		img {
			width: 100%;
			box-sizing: border-box;
		}
	}
	.imgbottom {
		.imgbottom-l {
			width: 33.3333%;
			height: 120px;
			float: left;
			border: 2px solid #f0f4f3;
			box-sizing: border-box;
			background-image: url(../image/img_edit_add.png);
			img {
				width: 100%;
				box-sizing: border-box;
			}
		}
	}
}

.edit-info {
	background-color: #fff;
	.input-wrap {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0 10px;
		
		.label {
			font-size: 14px;
			line-height: 50px;
		}
		.value {
			flex: 1;
			line-height: 50px;
			text-align: right;
			font-size: 14px;
		}
		input {
			flex: 1;
			line-height: 50px;
			text-align: right;
			font-size: 14px;
			padding: 0 5px;
			&.birthday {
				flex: 0;
			}
		}
		span{
			display: block;
			flex: 1;
			line-height: 50px;
			text-align: right;
			font-size: 14px;
		}
		.avatar{
			position: relative;
			height: 100px;
			line-height: 100px;
		}
		img{
			position: absolute;
			top: 10px;
			right: 10px;
			width: 80px;
			height: 80px;
		}
		
	}
	.textarea-wrap {
		padding: 0 10px;
		.label {
			font-size: 14px;
			line-height: 50px;
		}
		textarea {
			width: 100%;
			height: 80px;
			background-color: #fff;
			box-sizing: border-box;
			outline: none;
			line-height: 20px;
		}
	}
}

.btn-wrap {
	margin: 20px;
  .btn{
		width: 100%;
		height: 40px;
		line-height: 40px;
		background-color: #ccc;
		color: #fff;
		border-radius: 5px;
	}
	.btn-active{
		width: 100%;
		height: 40px;
		line-height: 40px;
		background-color: @main-color;
		color: #fff;
		border-radius: 5px;	
	}
}
.FNImageClip-control {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 50px;
	background-color: #000;
	display: flex;
	justify-content: space-between;
	align-items: center;
	span {
		height: 100%;
		line-height: 50px;
		padding: 0 20px;
		color: #fff;
		font-size: 16px;
	}
}

.editConfirm-tishi {
	p {
		padding: 10px;
	}
	.editConfirm-tishiImgBox {
		display: flex;
		justify-content: flex-start;
		align-items: center;
		padding: 0 5px;
		.editConfirm-tishiImg {
			flex: 1;
			padding: 0 5px;
			img {
				display: block;
				width: 100%;
			}
		}
	}
	.editConfirm-tishi-b {
		font-size: 12px;
	}
}

.account-info {
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 30px 0;
	background: #fff;
	margin-bottom: 2px;
	.label {
		font-size: 18px;
		color: #000;
		margin-right: 15px;
	}
	.balance {
		display: flex;
		align-items: center;
		img {
			width: 20px;
			height: 20px;
			margin-right: 10px;
		}
		span {
			font-size: 14px;
			color: #333;
		}
	}
}