        });
      },
      mounted: function () {
        var _this = this;
        _this.getHomeLocal();
      },
      methods: {
        getHomeLocal: function () {
          var _this = this;
          // api.showProgress({
          //   title: '',
          //   text: ''
          // });

          api.ajax({
            url: baseUrl + 'home/local',
            method: 'get',
            headers: {
              token: $api.getStorage('deviceToken')
            },
            data: {
              values: {
                uid: $api.getStorage('uid'),
                page: _this.page
              },
            }
          }, function (ret, err) {
            api.refreshHeaderLoadDone();
            // api.hideProgress();
            if (ret.status == 200) {
              if (_this.page == 1) {
                _this.page++;
                _this.list = ret.data.list;
                _this.city = ret.city;
                _this.info = ret.info;
              } else if (_this.page <= ret.pagination.last_page) {
                _this.page++;
                for (var i = 0; i < ret.data.list.length; i++) {
