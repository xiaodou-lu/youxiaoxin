<script type="text/javascript">
  var app, dialogBox;
  apiready = function () {
    dialogBox = api.require('dialogBox');
    app = new Vue({
      el: '#app',
      data: {
        list: [],
        info: {},
        city: '',
        page: 1,
      },
      created: function () {
        console.log($api.getStorage('deviceToken'));
          console.log($api.getStorage('uid'))
        var _this = this;
        api.setRefreshHeaderInfo({
